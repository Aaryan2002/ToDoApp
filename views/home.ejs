<html>
    <head>
        <title>The ToDO App</title>
        <script src="https://kit.fontawesome.com/d40dfa58a1.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
    <h1 id = "main_heading">Todo App</h1>
    <form action = "/create-task" method="POST" id = "create-task-form">
        <div class="section">
            <h2 class="section_heading">Desciption</h2>
            <input type="text" name="description" id="desciption_input" placeholder= "What do you need to do?" required>
        </div>
        <div class ="horizontal">
        <div class="section">
            <h2 class="section_heading">Category</h2>
            <select id="category" name="category" form="create-task-form" required>
                <option value="College">College</option>
                <option value="Leisure">Leisure</option>
                <option value="Work">Work</option>
                <option value="Others">Others</option>
              </select>
        </div>
        <div class = "vertical_line"></div>
        <div class="section">
            <h2 class="section_heading">Due Date</h2>
            <input type="date" name="due_date" id = "due_date" required>
        </div>
        </div>
        <div class="section horizontal">
            <button type="submit" id="submit_button">
                <i class="fas fa-plus"></i>
                <h2>Add task</h2>
            </button>
        </div>
    </form>
    <% for (let t of task_list){ %>
    <div class="section horizontal">
       
        <div class = "inline task_section">
            <h2 class="task_heading section_heading">
                <%= t.description %>
            </h2>
            <i class="fas fa-calendar date_icon" ></i>
            <h3><%= t.due_date %></h3>
        </div>
        <div class="category_section color_<%= t.category %>">
            <h2><%= t.category %></h2>
        </div>
        <div class="task_delete_section">
            <a class = "delete_button" href="/delete-task/?id=<%= t._id %>">
                <i class="fas fa-trash"  ></i>
            </a>
        </div>
    

    </div>
    <% } %>
    </body>

</html>